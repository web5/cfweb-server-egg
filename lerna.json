{
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "feature/*"
      ],
      "exact": true,
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "build: release version %v"
    },
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "allowBranch": [
        "master",
        "feature/*"
      ]
    }
  }
}
